---
const navLinks = [
  { label: 'About', href: '/about' },
  { label: 'Blog', href: '/blog' },
  { label: 'Projects', href: '/projects' },
  { label: 'Resume', href: '/resume' },
  { label: 'Recipes', href: '/recipes' },
];

const socialLinks = [
  { label: 'Email', href: 'mailto:mfcollins3@me.com', icon: 'email', classes: 'fa-regular fa-envelope' },
  { label: 'GitHub', href: 'https://github.com/mfcollins3', icon: 'github', classes: 'fa-brands fa-github' },
  { label: 'LinkedIn', href: 'https://www.linkedin.com/in/michaelfcollins3/', icon: 'linkedin', classes: 'fa-brands fa-linkedin' },
  { label: 'YouTube', href: 'https://www.youtube.com/@mfcollins3', icon: 'youtube', classes: 'fa-brands fa-youtube' },
  { label: 'Medium', href: 'https://medium.com/@mfcollins3', icon: 'medium', classes: 'fa-brands fa-medium' },
  { label: 'Facebook', href: 'https://www.facebook.com/mfcollins3', icon: 'facebook', classes: 'fa-brands fa-facebook' },
  { label: 'X', href: 'https://x.com/mfcollins3', icon: 'x', classes: 'fa-brands fa-x-twitter' },
  { label: 'Instagram', href: 'https://www.instagram.com/mfcollins3/', icon: 'instagram', classes: 'fa-brands fa-instagram' },
  { label: 'Threads', href: 'https://www.threads.com/@mfcollins3', icon: 'threads', classes: 'fa-brands fa-threads' },
  { label: 'Bluesky', href: 'https://bsky.app/profile/mfcollins3.bsky.social', icon: 'bluesky', classes: 'fa-brands fa-bluesky' },
];
---

<nav class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Brand -->
      <a href="/" class="flex-shrink-0">
        <span class="hidden sm:inline text-xl font-semibold text-gray-900">
          Michael F. Collins, III
        </span>
        <span class="sm:hidden text-xl font-semibold text-gray-900">MFC3</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class="text-gray-700 hover:text-[#87ceeb] transition-colors duration-200"
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- Social Media Links -->
      <div class="hidden lg:flex items-center space-x-4">
        {socialLinks.map((social) => (
          <a
            href={social.href}
            target={social.href.startsWith('mailto') ? undefined : '_blank'}
            rel={social.href.startsWith('mailto') ? undefined : 'noopener noreferrer'}
            class="text-gray-600 hover:text-[#87ceeb] transition-colors duration-200"
            aria-label={social.label}
          >
            <i class={social.classes}></i>
          </a>
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden text-gray-700 hover:text-[#87ceeb] p-2"
        aria-label="Toggle menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg id="icon-open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="icon-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200 bg-white">
    <div class="px-4 py-4 space-y-3">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class="block text-gray-700 hover:text-[#87ceeb] transition-colors duration-200 py-2"
        >
          {link.label}
        </a>
      ))}
      <div class="pt-4 border-t border-gray-200 flex flex-wrap gap-4">
        {socialLinks.map((social) => (
          <a
            href={social.href}
            target={social.href.startsWith('mailto') ? undefined : '_blank'}
            rel={social.href.startsWith('mailto') ? undefined : 'noopener noreferrer'}
            class="text-gray-600 hover:text-[#87ceeb] transition-colors duration-200"
            aria-label={social.label}
          >
            <i class={social.classes}></i>
          </a>
        ))}
      </div>
    </div>
  </div>
</nav>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  const iconOpen = document.getElementById('icon-open');
  const iconClose = document.getElementById('icon-close');

  button?.addEventListener('click', () => {
    const isOpen = !menu?.classList.contains('hidden');
    menu?.classList.toggle('hidden');
    iconOpen?.classList.toggle('hidden');
    iconClose?.classList.toggle('hidden');
    button.setAttribute('aria-expanded', String(!isOpen));
  });
</script>
