---
interface Props {
    title: string;
    href: string;
}

const { title, href } = Astro.props as Props;
---

<div class="tag"><a href={href}>{title}</a></div>

<style>
    .tag {
        display: flex;
        align-items: center;
        font-weight: 500;
        font-size: 0.75rem;
        line-height: 1rem;
        letter-spacing: 0;
        padding: 0.25rem 0.5rem;
        border-radius: 0.375rem;
        background-color: #eceef2;
        color: #030213;

        a, a:visited {
            text-decoration: none;
            color: inherit;
        }
    }
</style>