---
import type { CollectionEntry } from 'astro:content';
import FeaturedImage from './FeaturedImage.astro';

interface Props {
  post: CollectionEntry<'blog'>;
  featured?: boolean;
}

const { post, featured = false } = Astro.props;

const formattedDate = post.data.publishedDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const postUrl = `/blog/${post.id}`;
---

{featured ? (
  <a href={postUrl} class="block group">
    <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
      <div class="grid md:grid-cols-2 gap-0">
        {post.data.featuredImage && (
          <div class="relative h-64 md:h-auto overflow-hidden">
            <FeaturedImage
              src={post.data.featuredImage}
              alt={post.data.title}
            />
          </div>
        )}
        <div class="p-6 md:p-8 flex flex-col justify-center">
          <div class="flex items-center gap-4 text-sm text-gray-600 mb-3">
            <span>{formattedDate}</span>
          </div>
          <h2 class="text-3xl font-bold text-gray-900 mb-4 group-hover:text-[#87ceeb] transition-colors duration-200">
            {post.data.title}
          </h2>
          <p class="text-gray-600 mb-4 line-clamp-3">{post.data.excerpt}</p>
          <div class="flex flex-wrap gap-2">
            {post.data.tags.slice(0, 3).map((tag: string) => (
              <span class="px-3 py-1 bg-[#e0f2fe] text-gray-800 rounded-full text-sm">
                {tag}
              </span>
            ))}
          </div>
        </div>
      </div>
    </article>
  </a>
) : (
  <a href={postUrl} class="block group h-full">
    <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 h-full flex flex-col">
      {post.data.featuredImage && (
        <div class="relative h-48 overflow-hidden">
          <FeaturedImage
            src={post.data.featuredImage}
            alt={post.data.title}
          />
        </div>
      )}
      <div class="p-6 flex flex-col flex-grow">
        <div class="flex items-center gap-4 text-sm text-gray-600 mb-3">
          <span>{formattedDate}</span>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-[#87ceeb] transition-colors duration-200">
          {post.data.title}
        </h3>
        <p class="text-gray-600 mb-4 line-clamp-2 flex-grow">{post.data.excerpt}</p>
        <div class="flex flex-wrap gap-2 mt-auto">
          {post.data.tags.slice(0, 3).map((tag: string) => (
            <span class="px-3 py-1 bg-[#e0f2fe] text-gray-800 rounded-full text-sm">
              {tag}
            </span>
          ))}
        </div>
      </div>
    </article>
  </a>
)}
