---
import { getImage } from 'astro:assets';
import photo from './brand_photo.jpeg';

const brandPhoto = await getImage({
    src: photo,
    format: 'webp',
    width: 48,
    height: 48,
});
const brandStyle = `background-image: url(${brandPhoto.src});`;
---

<div class="navigation-bar">
    <div class="container">
        <div class="brand">
            <a href="/">
                <span class="photo" style={brandStyle}></span>
            </a>
            <div class="title">
                <h1><a href="/"><span class="full-name">Michael F. Collins, III</span><span class="short-name">MFC3</span></a></h1>
                <p>Software Developer, Architect, and Leader</p>
            </div>
        </div>
        <input type="checkbox" id="toggle-menu" name="toggle-menu" />
        <div class="mobile-menu">
            <label class="menu-toggle" for="toggle-menu">
                <i class="menu fa-solid fa-bars fa-xl"></i>
                <i class="close fa-solid fa-x fa-xl"></i>
            </label>
        </div>
        <div class="navigation">
            <ul class="navigation-links">
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/blog">Blog</a></li>
                <li><a href="/projects">Projects</a></li>
                <li><a href="/resume">Resume</a></li>
                <li><a href="/recipes">Recipes</a></li>
            </ul>
            <ul class="social-links">
                <li><a href="https://github.com/mfcollins3" target="_blank"><i class="fa-brands fa-github"></i></a></li>
                <li><a href="https://www.youtube.com/@mfcollins3" target="_blank"><i class="fa-brands fa-youtube"></i></a></li>
                <li><a href="https://www.linkedin.com/in/michaelfcollins3/" target="_blank"><i class="fa-brands fa-linkedin"></i></a></li>
                <li><a href="https://medium.com/@mfcollins3" target="_blank"><i class="fa-brands fa-medium"></i></a></li>
                <li><a href="https://bsky.app/profile/mfcollins3.bsky.social" target="_blank"><i class="fa-brands fa-bluesky"></i></a></li>
            </ul>
        </div>
    </div>
</div>

<style>
    a {
        text-decoration: none;
        color: black;
    }

    .navigation-bar {
        padding: 1rem 2rem;
    }

    .container {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }

    .brand {
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .photo {
        display: block;
        width: 3rem;
        height: 3rem;
        background-size: fit;
        background-position: top;
        background-repeat: no-repeat;
        clip-path: circle(50%);
    }

    .title {
        display: flex;
        flex-direction: column;

        h1 {
            font-weight: 400;
            font-size: 1.25rem;
            line-height: 1.75rem;
            letter-spacing: -0.45px;
            margin: 0;
        }

        p {
            font-weight: 400;
            font-size: 0.875rem;
            line-height: 1.25rem;
            letter-spacing: -0.15px;
            margin: 0;
        }
    }

    .short-name {
        display: none;
    }

    .navigation {
        display: flex;
        flex-direction: row;
        gap: 2rem;
        align-items: center;
    }

    ul {
        list-style: none;
        padding: 0;
        display: flex;
        flex-direction: row;
        gap: 1rem;

        li a {
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.25rem;
            letter-spacing: -0.15px;
        }
    }

    .mobile-menu, #toggle-menu, .menu-toggle {
        display: none;
    }

    .menu, .close {
        cursor: pointer;
    }

    @media (max-width: 1100px) {
        .mobile-menu {
            display: block;
        }

        .menu-toggle {
            display: block;
        }

        #toggle-menu {
            display: none;
        }

        .navigation-bar {
            position: relative;
        }
        
        .navigation {
            position: absolute;
            top: 5rem;
            left: 0;
            width: 100%;
            height: 21rem;
            flex-direction: column;
            gap: 1rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(3rem);
            background-color: rgba(255, 255, 255, 0.8);

            .navigation-links {
                flex-direction: column;
                align-items: center;
            }
        }

        #toggle-menu:checked ~ .mobile-menu .menu-toggle .menu {
            display: none;
        }

        #toggle-menu:not(:checked) ~ .mobile-menu .menu-toggle .menu {
            display: block;
        }

        #toggle-menu:checked ~ .mobile-menu .menu-toggle .close {
            display: block;
        }

        #toggle-menu:not(:checked) ~ .mobile-menu .menu-toggle .close {
            display: none;
        }

        #toggle-menu:checked ~ .navigation {
            display: flex;
        }

        #toggle-menu:not(:checked) ~ .navigation {
            display: none;
        }
    }

    @media (max-width: 470px) {
        .full-name, .title p {
            display: none;
        }

        .short-name {
            display: inline;
        }
    }
</style>