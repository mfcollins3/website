---
import NavigationBar from '../components/navigation_bar/NavigationBar.astro';
import Hero from '../components/Hero.astro';
import FeaturedArticle from '../components/FeaturedArticle.astro';
import '../styles/styles.css';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<title>Home - Michael F. Collins, III</title>
		<script src="https://kit.fontawesome.com/4be596d099.js" crossorigin="anonymous"></script>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet">
	</head>
	<body>
		<nav class="navigation-bar">
			<NavigationBar />
		</nav>
		<div class="content">
			<Hero />
			<FeaturedArticle />
		</div>
	</body>
</html>

<style>
	.navigation-bar {
		position: fixed;
		top: 0;
		z-index: 100;
		width: 100%;
	}

	.content {
		margin-top: 5rem;
		z-index: 0;
	}
</style>